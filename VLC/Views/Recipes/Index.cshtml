@model IEnumerable<VLC.Models.Recipes.Recipe>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>

<div id="all-recipes" class="table">
    <table>
        <thead>
            <tr>
                <th>
                    Id
                </th>
            </tr>
                <tr>
                    <th>
                        IsFavorite
                    </th>
                </tr>
                <tr>
                    <th>
                        Rating
                    </th>
                </tr>
                <tr>
                    <th>
                        Calories
                    </th>
                </tr>
                <tr>
                    <th>
                        Label
                    </th>
                </tr>
                <tr>
                    <th>
                        Thumbnail Image
                    </th>
                </tr>
                <tr>
                    <th>
                        ShareAs
                    </th>
                </tr>
        </thead>
        <tbody>
        
        @{
            foreach(var recipe in Model)
            {
                <tr>
                    <td>
                        @recipe.Id;
                    </td>
                </tr>
                <tr>
                    <td>
                        @recipe.IsFavorite;
                    </td>
                </tr>
                <tr>
                    <td>
                        @recipe.Rating;
                    </td>
                </tr>
                <tr>
                    <td>
                        @recipe.Calories;
                    </td>
                </tr>
                <tr>
                    <td>
                        @recipe.Label;
                    </td>
                </tr>
                <tr>
                    <td>
                        @recipe.ImageURL;
                    </td>
                </tr>
                <tr>
                    <td>
                        @recipe.ShareAs;
                    </td>
                </tr>
            }
        }
        </tbody>
        <tfoot>

        </tfoot>
    </table>

</div>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Uri)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Label)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Source)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShareAs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Yield)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Calories)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalWeight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Instructions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Portions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PortionSize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PortionUnitOfMeasurment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grams)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuthorId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PreperationTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CookingTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsFavorite)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageURL)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Uri)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Label)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Source)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Url)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShareAs)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Yield)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Calories)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalWeight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Instructions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Portions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PortionSize)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PortionUnitOfMeasurment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grams)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PreperationTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CookingTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsFavorite)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageURL)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
