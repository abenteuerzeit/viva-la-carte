@{
    ViewData["Title"] = "Viva La Carte!";
}


    <main>
        <div class="modal-container">
            <div class="modal-content">
                <div style="border-bottom: 2px solid black; margin-bottom: 10px;">
                    <div class="modal-header">
                        <h4 class="modal-title">Meal manager</h4>
                        <button type="button" class="close" aria-hidden="true">x</button>
                    </div>
                </div>
                <div class="modal-body">
                    <div class="calculator_form">
                        <form class="form-horizontal" id="calculator_form" asp-action="Create" asp-controller="MealManagers" onsubmit="() => { alert('Submitted') };">
                            <fieldset>
                                <div class="col-12 alert alert-primary text-small" role="alert">
                                    <p>
                                        This planner uses a standard BMR equation (the Mifflin-St Jeor formula) to estimate your Calorie
                                        needs. We also make some rough macronutrient suggestions, but you're free to
                                        completely customize these values when you create a free account.
                                    </p>
                                    <p class="pb-0 mb-0">
                                        <strong>Keep in mind that this is a general estimate.</strong> For best results, consult your healthcare
                                        provider.
                                    </p>
                                </div>

                                <div class="row label-align">
                                    <label for="current-preset-diet" class="col-sm-4 col-form-label">Current diet type</label>
                                    <div class="col-sm-8" id="current-preset-diet">
                                        <span> vegan </span>
                                    </div>
                                </div>

                                <div class="form-group row label-align">
                                    <div class="col-sm-4">
                                        <label for="goal-radio">I want to</label>
                                    </div>
                                    <div class="col-sm-8 stretch-it" id="goals-radio">
                                        <div class="radio-flex">
                                            <input type="radio" name="goal" value="@MealManagerUtility.WeightGoal.Lose" id="goal-1">
                                            <label class="btn-sm" for="goal-1">Lose weight</label>
                                        </div>
                                        <div class="radio-flex">
                                            <input type="radio" name="goal" value="@MealManagerUtility.WeightGoal.Maintain" id="goal-2" checked>
                                            <label class="btn-sm" for="goal-2">Maintain</label>
                                        </div>
                                        <div class="radio-flex">
                                            <input type="radio" name="goal" value="@MealManagerUtility.WeightGoal.Gain" id="goal-3">
                                            <label class="btn-sm" for="goal-3">Build muscle</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row label-align">
                                    <div class="col-sm-4">
                                        <label for="units-radio">Preffered units</label>
                                    </div>
                                    <div class="col-sm-8 stretch-it" id="units-radio">
                                        <div class="radio-flex">
                                            <input type="radio" name="units" value="@MealManagerUtility.MeasurementSystem.US_Customary" id="units-inches">
                                            <label class="btn-sm" for="units-1">U.S. Standard</label>
                                        </div>
                                        <div class="radio-flex">
                                            <input type="radio" name="units" value="@MealManagerUtility.MeasurementSystem.Metric" id="units-metric" checked>
                                            <label class="btn-sm" for="units-1">Metric</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row label-align">
                                    <div class="col-sm-4">
                                        <label for="gender-radio">I am</label>
                                    </div>
                                    <div class="col-sm-8 stretch-it" id="gender-radio">
                                        <div class="radio-flex">
                                            <input type="radio" name="gender" value="@MealManagerUtility.Gender.Male" id="gender-male">
                                            <label class="btn-sm" for="gender-1">Male</label>
                                        </div>
                                        <div class="radio-flex">
                                            <input type="radio" name="gender" value="@MealManagerUtility.Gender.Female" id="gender-female" checked>
                                            <label class="btn-sm" for="gender-2">Female</label>
                                        </div>
                                    </div>
                                </div>
                                <!-- TODO Iterator for form REFACTOR -->
                                <div class="form-group row label-align">
                                    <div class="col-sm-4">
                                        <label for="height">Height</label>
                                    </div>
                                    <div class="col-sm-4 stretch-it" id="height">
                                        <input type="number" name="height" id="height" value="@MockMealPlan.Height">
                                        <label for="height" class="label-absolute">cm</label>
                                    </div>
                                </div>

                                <div class="form-group row label-align">
                                    <div class="col-sm-4">
                                        <label for="weight">Weight</label>
                                    </div>
                                    <div class="col-sm-4 stretch-it" id="weight">
                                        <input type="text" name="weight" id="weight" value="@MockMealPlan.Weight">
                                        <label for="weight" class="label-absolute">kg</label>
                                    </div>
                                </div>

                                <div class="form-group row label-align">
                                    <div class="col-sm-4">
                                        <label for="height">Age</label>
                                    </div>
                                    <div class="col-sm-4 stretch-it" id="age">
                                        <input type="text" name="height" id="age" value="@MockMealPlan.Age">
                                        <label for="age" class="label-absolute">years</label>
                                    </div>
                                </div>

                                <div class="form-group row label-align">
                                    <div class="col-sm-4">
                                        <label for="goal-radio">Bodyfat</label>
                                    </div>
                                    <div class="col-sm-8 stretch-it" id="fat-radio">
                                        <div class="radio-flex">
                                            <input type="radio" name="bodyfat" value="@MealManagerUtility.BodyFat.Low" id="fat-1">
                                            <label class="btn-sm" for="bodyfat-1">Low < 14%</label>
                                        </div>
                                        <div class="radio-flex">
                                            <input type="radio" name="bodyfat" value="@MealManagerUtility.BodyFat.Medium" id="fat-2" checked>
                                            <label class="btn-sm" for="bodyfat-2">Medium 14%-22%</label>
                                        </div>
                                        <div class="radio-flex">
                                            <input type="radio" name="bodyfat" value="@MealManagerUtility.BodyFat.High" id="fat-3">
                                            <label class="btn-sm" for="bodyfat-3">High > 22%</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row label-align">
                                    <div class="col-sm-4">
                                        <label for="height">Activity level</label>
                                    </div>
                                    <div class="col-sm-6 stretch-it" id="activity_level_dropdown">
                                        <select name="activity_level" class="form-control-act">
                                            <option value="Choose an option">-- choose an option --</option>
                                            <option value="1.2" selected>Sedentary</option>
                                            <option value="1.375">Lightly Active</option>
                                            <option value="1.55">Moderatly Active</option>
                                            <option value="1.725">Very Active</option>
                                            <option value="1.9">Extremely Active</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="offset">
                                    <button class="btn-green" id="calculate_button">
                                        <i class="fa fa-calculator" aria-hidden="true"></i>
                                        Calculate
                                    </button>
                                </div>

                            </fieldset>
                        </form>
                    </div>
                    <div style="border-top: 2px solid black; margin-top: 10px;">
                        <div class="modal-footer">
                            <a href="#" data-dismiss="modal" class="btn">Close</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>


