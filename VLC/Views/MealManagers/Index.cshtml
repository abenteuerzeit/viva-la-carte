@model IEnumerable<VLC.Models.MealManager.MealManager>

@{
    ViewData["Title"] = "Index";
}

<h1>{USER} Meal Manager</h1>
<h5>This is the history of your meal preferences</h5>

<p>
    <a asp-action="Create" class ="btn btn-success">Create New</a>
</p>
<table class="table table-striped table-hover">
    <thead style="border: 1px solid black">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TotalCalories)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MealCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Diet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Goal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MeasurementSystem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Height)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BodyFat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActivityLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.CountTotalCalories()
            </td>
            <td>
                @*<input type="hidden" asp-for="@item.MealCount" />*@
                @item.MealCount
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Diet)*@
                @item.Diet
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Goal)*@
                @item.Goal
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.MeasurementSystem)*@
                @item.MeasurementSystem
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Height)*@
                @item.Height
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Weight)*@
                @item.Weight
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Age)*@
                @item.Age
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.BodyFat)*@
                @item.BodyFat
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.ActivityLevel)*@
                @item.ActivityLevel
            </td>
            <td>
                @item.Gender
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
